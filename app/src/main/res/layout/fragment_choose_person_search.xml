<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/minRoom"
                android:clickable = "false"
                android:src="@drawable/circle_minus" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/txtRoom"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_main"
                    android:textSize="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ROOM(S)"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/circle_plus"
                android:layout_weight="0.5"
                android:id="@+id/plusRoom"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/minAdult"
                android:src="@drawable/circle_minus" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/txtAdult"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_main"
                    android:textSize="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ADULT(S)"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/circle_plus"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/plusAdult"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/minChild"
                android:src="@drawable/circle_minus" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/txtChild"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_main"
                    android:textSize="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="CHILD(S)"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/circle_plus"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/plusChild"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:id="@+id/btnOk"
        android:background="@color/color_main"
        android:text="OK"

        android:textColor="@color/colorWhite" />
</RelativeLayout>