<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail_place"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:drawablePadding="5dp"
            android:padding="2dp"
            android:text="@string/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="108dp"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/thumbnail_place"
            android:layout_alignStart="@+id/tvAddress"
            android:rating="3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/thumbnail_place"
            android:layout_marginTop="80dp"
            android:background="@color/colorRed"
            android:padding="3dp"
            android:text="$10"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail_place"
            android:layout_toStartOf="@+id/textView7"
            app:srcCompat="@drawable/ic_alarm" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvAddress"
            android:layout_alignTop="@+id/thumbnail_place"
            android:text="5 hours"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>