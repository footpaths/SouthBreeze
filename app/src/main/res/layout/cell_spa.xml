<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail_place"
            android:layout_width="126dp"
            android:layout_height="107dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/spa" />

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/thumbnail_place"
            android:layout_marginStart="150dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="Hoa Anh Đào"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="196dp"
            android:layout_height="114dp"
            android:layout_alignStart="@+id/tvStoreName"
            android:layout_below="@+id/tvStoreName"
            android:padding="2dp"
            android:text="@string/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <Button
            android:id="@+id/button"
            android:layout_width="126dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/thumbnail_place"
            android:layout_below="@+id/thumbnail_place"
            android:layout_marginTop="-8dp"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:text="@string/book"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/white" />


    </RelativeLayout>

</android.support.v7.widget.CardView>